@page
@model MyApp.Namespace.CreateReservationModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Rezervasyon Oluştur</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="startTime">Başlangıç:</label>
        <input type="datetime-local" id="startTime" name="Reservation.StartTime" class="form-control" />
    </div>
    <div class="form-group">
        <label for="endTime">Bitiş:</label>
        <input type="datetime-local" id="endTime" name="Reservation.EndTime" class="form-control" />
    </div>
    <div class="form-group">
        <label for="room">Oda:</label>
        <select id="room" name="Reservation.RoomId" class="form-control">
            <option value="">Seç</option>
            @if (Model.Rooms != null)
            {
                @foreach (var room in Model.Rooms)
                {
                    <option value="@room.Id">@room.RoomName</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Rezervasyon Oluştur</button>
</form>

