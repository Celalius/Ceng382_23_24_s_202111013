@page
@model MyApp.Namespace.RoomsModel
@{
    ViewData["Title"] = "Rooms List";
}

<h1 style="">Oda Listesi</h1>

<table class="table table-striped", style="background-color: white;">
    <thead>
        <tr>
            <th>Oda İsmi</th>
            <th>Kapasite</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.RoomName</td>
                <td>@room.Capacity</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@room.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./CreateRoom" class="btn btn-primary">Oda Oluştur</a>