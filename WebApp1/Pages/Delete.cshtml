@page
@model MyApp.Namespace.DeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<h1>Oda Kaldırma</h1>

<h3>Silmek istediğinden emin misin?</h3>
<div>
    <h4>Oda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İsim
        </dt>
        <dd class="col-sm-10">
            @Model.Room.RoomName
        </dd>
        <dt class="col-sm-2">
            Kapasite
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Capacity
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.Id" />
        <button type="submit" class="btn btn-danger">Kaldır</button>
        <a asp-page="./Index" class="btn btn-secondary">İptal Et</a>
    </form>
</div>
